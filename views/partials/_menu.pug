nav.main-nav
    a.c-hamburger.htx.js-asd-menu(href='#aside-menu')
        span toggle menu
    ul.main-nav-list.sf-menu
        li.active
            a(href='/') home
    
        for cat in categorias
            //destinos
            if cat.id != '1'
                li
                    a(href="/materias/"+cat.slug)
                        | #{cat.name}
                        if cat.subcategorias.length
                            i.fa.fa-angle-down
                    if cat.subcategorias.length
                        ul.sub
                            for subcat in cat.subcategorias
                                if subcat.slug != 'capa'
                                    li
                                        a(href="/materias/"+cat.slug+"/"+subcat.slug)= subcat.name
                            if cat.slug == 'editorial'
                                li
                                    a(href='/edicoes') Edições anteriores
            else
                <li class="mf">
                    <a href="/materias/destinos">Destinos<i class="fa fa-angle-down"></i></a>
                    <ul class="sub">
                        <li>
                            <div class="mega-menu">
                                <div class="col-row">
                                    <div class="col-one-fifth sm-col-one-fifth cats">
                                        <ul>
                                            <li><a href="/materias/destinos/nacionais">Nacional</a></li>
                                            <li><a href="/materias/destinos/internacionais">Internacional</a></li>
                                            <li><a href="/materias/destinos/expedicao">Expedição</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-four-fifths sm-col-four-fifths">
                                        <div class="mm-life-st-pst">
                                            <div class="mm-life-st-title">
                                                <span>Destinos</span>
                                                <a href="/materias/destinos" class="all">Todos os destinos</a>
                                            </div>
                                            <div class="col-row">
                                            for des_menu in destinos_menu
                                                <div class="col-one-quarter">
                                                    <article class="post">
                                                        <figure>
                                                            <a href="/materia/#{des_menu.slug}">
                                                                img(src=des_menu.showImage, height="136", width="203")
                                                                //- <img src= '#{des_menu.imagem_principal_path}' height="136" width="203" alt="Spectr News Theme" class="adaptive" />
