doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        // Meta, title, CSS, favicons, etc.
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Administração - Avianca
        // Bootstrap
        link(href='/admin_assets/vendors/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        // Font Awesome
        link(href='/admin_assets/vendors/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        // NProgress
        link(href='/admin_assets/vendors/nprogress/nprogress.css', rel='stylesheet')
        // Animate.css
        link(href='/admin_assets/vendors/animate.css/animate.min.css', rel='stylesheet')
        // Custom Theme Style
        link(href='/admin_assets/build/css/custom.min.css', rel='stylesheet')
    body.login
        div
            a#signup.hiddenanchor
            a#signin.hiddenanchor
            .login_wrapper
                .animate.form.login_form
                    section.login_content
                        form(action="/admin/login", method="POST")
                            h1 Administração
                            img(src="/assets/img/logo.png", style="width: 90%; margin-bottom: 35px;")
                            include ../partials/_errors.pug
                            div
                                input.form-control(type='text', placeholder='Usuário', name="username")
                            div
                                input.form-control(type='password', placeholder='Senha', name="password")
                            div
                                button.full-width.btn.btn-danger.submit(type="submit", style="width: 100%;") Entrar
                            .clearfix
