        script.
            $(document).ready(function(){
                new Vue({
                  el: '#top-phrase',
                  data: {
                    month: getMonth()
                  }
                })

                function getMonth(){
                    var date = new Date();
                    var m = date.getMonth();
                    var months = ['janeiro', 'fevereiro', 'março', 'abril', 'maio', 'junho', 'julho', 'agosto', 'setembro', 'outubro', 'novembro', 'dezembro'];

                    return months[m];
                }
            })
